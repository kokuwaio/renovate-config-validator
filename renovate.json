{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["kokuwaio/renovate-config"],
	"packageRules": [
		{
			"description": "Renovate should only update its major version because of pull policy Always.",
			"matchPackageNames": ["renovate"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true
		},{
			"description": "Renovate generates a lot noise because of multiple releases per day, only rebuild at night.",
			"matchPackageNames": ["renovate"],
			"schedule": ["* 1-5 * * *"]
		},{
			"description": "Renovate only supports nodejs 22.",
			"matchPackageNames": ["nodejs/node"],
			"matchUpdateTypes": ["major"],
			"enabled": false
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": ["README.md", "Dockerfile", ".woodpecker/build.yaml"],
			"matchStrings": [
				"kokuwaio/renovate-config-validator:(?<currentValue>(?<major>[0-9]+))",
				"version: (?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)",
				"renovate@(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
			],
			"datasourceTemplate": "npm",
			"packageNameTemplate": "renovate"
		},{
			"customType": "regex",
			"managerFilePatterns": ["Dockerfile"],
			"matchStrings": [
				"nodejs.org/download/release/(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)/",
				"node-(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)-linux-\\$ARCH"
			],
			"datasourceTemplate": "github-releases",
			"packageNameTemplate": "nodejs/node"
		}
	]
}
